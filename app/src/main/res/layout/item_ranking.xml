<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_ranking_rank_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:text="4"
        android:textColor="#FF747474"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/item_ranking_profile_img_iv"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/bg_tag"
        app:layout_constraintBottom_toBottomOf="@id/item_ranking_rank_tv"
        app:layout_constraintStart_toEndOf="@id/item_ranking_rank_tv"
        app:layout_constraintTop_toTopOf="@id/item_ranking_rank_tv" />

    <TextView
        android:id="@+id/item_ranking_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="goorm12345"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/item_ranking_profile_img_iv"
        app:layout_constraintStart_toEndOf="@id/item_ranking_profile_img_iv"
        app:layout_constraintTop_toTopOf="@id/item_ranking_profile_img_iv" />

    <ImageView
        android:id="@+id/item_ranking_tier_iv"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:src="@drawable/img_tier_red"
        android:layout_marginStart="4dp"
        app:layout_constraintTop_toTopOf="@id/item_ranking_name_tv"
        app:layout_constraintBottom_toBottomOf="@id/item_ranking_name_tv"
        app:layout_constraintStart_toEndOf="@id/item_ranking_name_tv"/>


    <TextView
        android:id="@+id/item_ranking_score_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:text="123456점"
        android:textColor="@color/font_subsub"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/item_ranking_profile_img_iv"
        app:layout_constraintStart_toEndOf="@id/item_ranking_tier_iv"
        app:layout_constraintTop_toTopOf="@id/item_ranking_profile_img_iv" />


</androidx.constraintlayout.widget.ConstraintLayout>