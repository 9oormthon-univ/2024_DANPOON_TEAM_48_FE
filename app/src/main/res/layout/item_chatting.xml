<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/item_chatting_profile_iv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/bg_ranking_profile_img"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/chat_chatting_member_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="goorm, goorm"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@id/item_chatting_profile_iv"
        app:layout_constraintStart_toEndOf="@id/item_chatting_profile_iv"/>

    <TextView
        android:id="@+id/chat_member_count_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:textColor="#ff747474"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="@id/chat_chatting_member_tv"
        app:layout_constraintBottom_toBottomOf="@id/chat_chatting_member_tv"
        app:layout_constraintStart_toEndOf="@id/chat_chatting_member_tv"
        android:layout_marginStart="12dp"/>

    <TextView
        android:id="@+id/chat_message_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9.27"
        android:textSize="13sp"
        android:textColor="#ff747474"
        app:layout_constraintTop_toTopOf="@id/chat_chatting_member_tv"
        app:layout_constraintBottom_toBottomOf="@id/chat_chatting_member_tv"
        app:layout_constraintStart_toEndOf="@id/chat_member_count_tv"
        android:layout_marginStart="104dp"/>

    <TextView
        android:id="@+id/chat_message_content_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#ff373737"
        android:text="안녕하세요. 팀빌딩 관련으로 연락 드립니다. 어쩌고 저쩌고 잘부탁드립니다."
        app:layout_constraintStart_toStartOf="@id/chat_chatting_member_tv"
        app:layout_constraintTop_toBottomOf="@id/chat_chatting_member_tv"
        app:layout_constraintEnd_toEndOf="@id/chat_message_date_tv"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#ffd9d9d9"
        app:layout_constraintTop_toBottomOf="@id/item_chatting_profile_iv"
        android:layout_marginTop="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>