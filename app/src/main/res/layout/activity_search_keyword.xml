<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchKeywordActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/search_keyword_back_btn_iv"
            android:layout_width="22dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_back"
            android:layout_marginStart="20dp"
            android:layout_marginTop="66dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/search_keyword_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="키워드 설정"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@id/search_keyword_back_btn_iv"
            app:layout_constraintBottom_toBottomOf="@id/search_keyword_back_btn_iv"
            app:layout_constraintStart_toEndOf="@id/search_keyword_back_btn_iv"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/search_keyword_pm_cl"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="49dp"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/search_keyword_title_tv">

            <TextView
                android:id="@+id/search_keyword_pm_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="기획"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/search_keyword_pm_fb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:flexWrap="wrap"
                app:justifyContent="flex_start"
                app:layout_constraintTop_toBottomOf="@id/search_keyword_pm_title_tv"
                android:layout_marginTop="4dp">

            </com.google.android.flexbox.FlexboxLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/search_keyword_design_cl"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="28dp"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/search_keyword_pm_cl">

            <TextView
                android:id="@+id/search_keyword_design_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="디자인"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/search_keyword_design_fb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:flexWrap="wrap"
                app:justifyContent="flex_start"
                app:layout_constraintTop_toBottomOf="@id/search_keyword_design_title_tv"
                android:layout_marginTop="4dp">

            </com.google.android.flexbox.FlexboxLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/search_keyword_fe_cl"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="28dp"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/search_keyword_design_cl">

            <TextView
                android:id="@+id/search_keyword_fe_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="프론트엔드"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/search_keyword_fe_fb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:flexWrap="wrap"
                app:justifyContent="flex_start"
                app:layout_constraintTop_toBottomOf="@id/search_keyword_fe_title_tv"
                android:layout_marginTop="4dp">

            </com.google.android.flexbox.FlexboxLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/search_keyword_be_cl"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="28dp"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/search_keyword_fe_cl">

            <TextView
                android:id="@+id/search_keyword_be_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="백엔드"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/search_keyword_be_fb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:flexWrap="wrap"
                app:justifyContent="flex_start"
                app:layout_constraintTop_toBottomOf="@id/search_keyword_be_title_tv"
                android:layout_marginTop="4dp">

            </com.google.android.flexbox.FlexboxLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
        
        <ImageView
            android:id="@+id/search_keyword_finish_btn_iv"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:src="@drawable/btn_keyword_setting"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintTop_toBottomOf="@id/search_keyword_be_cl"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@id/search_keyword_finish_btn_iv"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>